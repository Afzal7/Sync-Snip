<% @body_id='index-page' %>
<div class='banner'>
	<!-- <h1 class='text-center font-cursive'>Syncrow</h1> -->
	<div class='backdrop'></div>
	<div class='text-wrapper'>
	  <svg viewBox="0 0 600 150"  style="filter:url(#dropshadow)">
	    <!-- Symbol-->
	    <filter id="dropshadow" height="130%">
			  <feGaussianBlur in="SourceAlpha" stdDeviation="3"/> <!-- stdDeviation is how much to blur -->
			  <feOffset dx="0" dy="2" result="offsetblur"/> <!-- how much to offset -->
			  <feComponentTransfer>
			    <feFuncA type="linear" slope=".3"/> <!-- slope is the opacity of the shadow -->
			  </feComponentTransfer>
			  <feMerge> 
			    <feMergeNode/> <!-- this contains the offset blurred image -->
			    <feMergeNode in="SourceGraphic"/> <!-- this contains the element that the filter is applied to -->
			  </feMerge>
			</filter>
	    <symbol id="s-text">
	      <text text-anchor="middle" x="50%" y="50%" dy=".35em">Syncrow</text>
	    </symbol>
	    <!-- Duplicate symbols-->
	    <use class="text" xlink:href="#s-text"></use>
	    <use class="text" xlink:href="#s-text"></use>
	    <use class="text" xlink:href="#s-text"></use>
	    <use class="text" xlink:href="#s-text"></use>
	    <use class="text" xlink:href="#s-text"></use>
	  </svg>
  	<h1 class='text-center font-cursive text-white ls-2'>A Sublime Text 3 Plugin</h1>
  	<h2 class='text-center font-cursive text-white ls-2'>Create & Sync Snippets</h2>
  	<h2 class='text-center font-cursive text-white ls-2'><a href='https://github.com/Afzal7/syncrow' class='decoration-none text-white'>Try it now!</a></h2>
  </div>
</div>